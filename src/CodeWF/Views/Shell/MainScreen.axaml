<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:CodeWF.ViewModels"
             mc:Ignorable="d"
             x:Class="CodeWF.Views.Shell.MainScreen"
             x:DataType="viewModels:ViewModelBase"
             xmlns:shell="clr-namespace:CodeWF.Views.Shell"
             xmlns:navbar="clr-namespace:CodeWF.Views.Navbar"
             d:DesignWidth="1000" d:DesignHeight="1000"
             x:CompileBindings="True">
    <DockPanel>
        <shell:TitleBar DockPanel.Dock="Top" />
        <DockPanel>
            <navbar:Navbar DockPanel.Dock="Left" />
            <Border x:Name="ContentPart" BorderBrush="{DynamicResource TileBorderColor}"
                    BorderThickness="1 1 0 0"
                    CornerRadius="10 0 0 0" ClipToBounds="True">
                <Panel>
                    <Border CornerRadius="10 0 0 0" Background="{DynamicResource RegionColor}" ClipToBounds="True"
                            IsHitTestVisible="False" />
					<Border CornerRadius="10 0 0 0" BoxShadow="inset 0 0 5 0 #000000" ClipToBounds="True"
							IsHitTestVisible="False" Margin="0 0 -5 -5" />
                </Panel>
            </Border>
        </DockPanel>
    </DockPanel>
</UserControl>